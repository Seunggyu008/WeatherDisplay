@model WeatherDisplay.Models.Profile.PasswordEditVM;
@{
    ViewData["Title"] = "비밀번호 변경";
}

<div class="row mb-4 align-items-center">
    <div class="col-md-3 fw-bold">비밀번호</div>
    <div class="col-md-6">비밀번호는 보이지 않습니다.</div>
    <div class="col-md-3 text-end">
        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="toggleSection('passwordForm')">변경</button>
    </div>
    <div class="col-12 mt-2" id="passwordForm" style="display:none;">
        <form asp-action="ChangeUserPassword" method="post">
            <input asp-for="CurrentPassword" class="form-control mb-2" placeholder="현재 비밀번호" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            <input asp-for="NewPassword" class="form-control mb-2" placeholder="새 비밀번호" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
            <input asp-for="ConfirmPassword" class="form-control mb-2" placeholder="비밀번호 확인" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <button type="submit" class="btn btn-primary">비밀번호 변경</button>
        </form>
    </div>
</div>